{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "noLib": false,
    "noEmit": false,
    "jsx": "react",
    "outDir": "dist",
    "strictFunctionTypes": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true, // отрубаем проверку типов в node_modules, exclude невывозит
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css"
        ]
      }
    ],
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "static"
  ]
}
