{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noLib": false,
    "noEmit": false,
    "jsx": "react",
    "outDir": "dist",
    "strictFunctionTypes": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "static"
  ],
  "plugins": [
    {
      "name": "typescript-styled-plugin",
      "tags": [
        "styled",
        "css"
      ]
    }
  ]
}
